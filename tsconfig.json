{
  "compilerOptions": {
    // Project options
    "target": "ESNext",
    "lib": ["esnext", "dom"],
    "outDir": "lib",
    "sourceMap": true,
    "declaration": true,
    
    // Type check
    "strict": true,

    // Linter checks
    "noUnusedLocals": true,

    // Resolution
    "moduleResolution": "node",

    // Experimental
    "experimentalDecorators": true,
  },
  "include": [
    "src/",
    "typings/"
  ]
}
